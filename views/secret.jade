doctype html
html(lang="en")
    head
        title Welcome
    style
        include vstyle.css
body
    if authorised
        img(src="nodemongo.jpg", class='displayed')
        h1 Welcome, #{username}!
        h3 Your current address:
        h3 #{address}
        form(action="/usersdb", method="post")
            input(type="submit", value="Show users")
        form(action="/usermap", method="get")
            input(type="submit", value="Find me")

    else
        h1 You are not authorised to view this page
        form(action="/secret", method="post")
            input(type="password", name="secret")
            input(type="submit", value="Authorise")
